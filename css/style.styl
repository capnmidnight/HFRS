*,
:after,
:before
  box-sizing border-box

html,
body
  margin 0
  padding 0

#customer_logos
  text-align center

#callout
  background-color #fffe8c
  padding 1rem
  position relative

#closeButton
  cursor pointer
  position absolute
  top 0
  right 0
  padding-top 5px
  padding-right 10px
  font-size 20px

body
  background-color #ddd
  background-image linear-gradient(0deg, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0))
  background-repeat no-repeat
  background-attachment fixed
  font-family -apple-system, ".SFNSText-Regular", "San Francisco", "Roboto", "Segoe UI", "Helvetica Neue", "Lucida Grande", sans-serif
  font-size 16px
  line-height 1.4
  color #1B1831

img
  border 0

img.thumbnail
  border solid 1px #657F66
  cursor pointer

.icon-management,
.icon-data,
.icon-engineering,
.icon-github,
.icon-twitter,
.icon-linkedin,
.icon-pdf,
.icon-powerpoint,
.icon-telephone
  display inline-block
  background-image url(../images/icons.png)
  background-repeat no-repeat
  vertical-align middle
  background-size 100%

.icon-management,
.icon-data,
.icon-engineering
  width 200px
  height 200px
  margin-top 1em
  margin-bottom -200px
  opacity 0.125

.icon-engineering
  background-position 0 -200px

.icon-data
  background-position 0 -400px

.icon-linkedin,
.icon-twitter,
.icon-github,
.icon-pdf,
.icon-powerpoint,
.icon-telephone
  width 33px
  height 33px
  margin-right 7px

.icon-linkedin
  background-position 0 -99px

.icon-twitter
  background-position 0 -131px

.icon-github
  background-position 0 -164px

.icon-pdf
  background-position 0 -196px

.icon-powerpoint
  background-position 0px -231px

.icon-telephone
  background-position 0px -263px

.download-icon
    zoom 0.5
    margin-left 12.5px
    margin-top -5px

a
  text-decoration none
  color inherit
  font-weight bold

#content > article > a:last-child
  font-style italic
  opacity 0.75

ul
  text-align left

nav > ul
  list-style none
  padding 0
  margin 0
  text-align right
  font-size 50%

  > li
    display block
    width 80%
    margin-left 10%
    margin-right 3px

    > a
      width 100%
      display inline-block
      text-align center
      text-transform capitalize
      padding-top 1em
      padding-bottom 1em

#introVideo,
#introVideo > video,
#introVideo > .video
  position relative
  display inline-block
  width 100%
  margin 0
  padding 0

#content .button
  margin-top 2em
  margin-bottom 2em

#alt_services > .button
  margin-bottom 1em

header
  width 100%
  border-bottom solid 2px green
  background-color white

h1,
h2,
h3,
h4,
h5
  margin 0
  text-transform capitalize

h1,
h2
  text-align center
  font-weight normal

h1
  margin-top 1em
  font-size 190%
  color hsl(0, 0%, 20%)
  text-transform uppercase
  font-weight bold

h2
  margin-bottom 1.5em
  font-size 100%
  margin-top -0.5em
  color #393b44

h3
  border-bottom solid 2px rgb(0, 127, 0)
  font-size 115%
  padding 0.5em

h4
  margin-top 1em

  h4 > a
    text-decoration underline

#mainLogo
  width 10vw

ul
  list-style-type circle

#alt_services
  display none

article
  margin 0
  padding 1em
  display inline-block
  width 100%

article:last-child
  padding-bottom 2em


#news > blockquote
  display inline-block
  margin 0

  img
    width 100%

#news > blockquote:nth-child(even) > img
  float left

blockquote
  p:before
    content open-quote

  p:after
    content close-quote

  cite
    color #657F66
    display block
    padding 0.5em
    font-size 16pt

  small
    white-space nowrap
    display block
    clear left

blockquote:nth-child(odd) > img
  float right

#shadowbox
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background-color rgba(0,0,0,0.75)
  padding 1em
  text-align center
  transition opacity 1s ease-out

  img
    max-width 100%
    max-height 100%

#shadowbox.hide
  opacity 0
  pointer-events none

#shadowbox.show
  opacity 1

@keyframes shadowboxfadein
  from
    opacity 0
    display block

  to
    opacity 1
    display block

article > section
  position relative
  text-align center
  width 100%

  div
    position relative
    display inline-block
    vertical-align top

    div
      color black
      padding 1em
      text-align left

#services > section > div
  min-width 260px
  width 100%
  background-color white
  margin-right 1em

.leadership ul
  list-style none
  font-size 80%
  padding 0

.leadership > div > img
  width 80%
  border-radius 50%
  margin 1em 10%

#customer_logos > a > img
  max-width calc(100% - 20px)
  margin 10px

input[type=text],
input[type=email],
input[type=tel],
textarea
  border solid 1px #ddd

footer
  position fixed
  width 100%
  border-top solid 2px white
  text-align center
  font-size 60%
  font-weight bold
  font-style italic
  background-color #939393
  color #f4f4f4
  bottom 0
  padding-top 0.5em
  animation-name footerslidein
  animation-timing-function ease-out
  animation-duration 0.25s

.rotator .pip
  cursor pointer
  font-size 24pt
  margin 0
  padding 0.25em

.rotator > div
  text-align center
  font-weight bold

#testimonials
  background-color #f4f4f4
  padding-bottom 1em

.announcement > img
  width 100%


label,
input,
textarea,
select
  padding 0.75em
  font-size 110%
  width 100%
  display block

input,
textarea
  margin-top 0

label
  margin-top 0.5em
  padding-bottom 0

.required:after
  content "*"
  color red

.primary
  background-color #00BB27
  background-image linear-gradient(0deg, rgba(0, 0, 0, .25), rgba(0, 0, 0, 0))
  color rgb(255, 255, 255)

.primary:hover
  background-color #15DC3E

.primary:active
  background-color #38AB58

header,
article:nth-child(odd)
  color #413E2D

.secondary,
article:nth-child(even)
  background-color #fff
  color #393B44

.secondary:hover
  background-color #3AD665

.secondary:active
  background-color #D0CF8D

.message
  padding 1em
  background-color white
  border-style dashed
  border-width 5px
  display none

  h4
    font-weight bold
    text-align center
    margin-top 0
    text-transform none

  p
    font-family monospace
    font-weight bold
    font-style normal

.error.message
  border-color red

  h4
    color red

.success.message
  border-color green

  h4
    color green

.button
  cursor pointer
  display inline-block
  text-align center
  text-decoration none
  padding 30px
  font-size 110%
  font-weight bold
  width 100%
  border-width 0

  small
    font-weight normal
    opacity 0.85

#services > section > div
  min-height calc(200px + 2em)


@media (max-width 768px)
  nav
    font-size 17pt
    padding-bottom 1em

    > ul > li
      background-image linear-gradient(176deg, rgba(0, 0, 0, 0.5), rgba(0, 38, 16, 0.25))
      color rgb(247, 247, 247)

  #mainLogo
    width 100%


@media (min-width 769px)
  #services > section > div
    min-width 200px
    height 18em
    width 30%

  header > nav
    font-size 26pt

  footer > nav
    font-size 12pt

  #announcement > img
    width 50%
    float right
    padding 1em

  nav
    display inline-block
    float right

    > ul > li
      display inline-block
      width auto
      margin-left 10px

  .disabled
    opacity 0.5

  header,
  #content > article
    padding-left calc(50% - 500px)
    padding-right calc(50% - 500px)

  #introVideo
    width 53%
    vertical-align top

  #alt_services
    display inline-block
    width 45%
    margin-right 1.5%

  #main_services
    display none

  .leadership > div
    width 33%

  #news > blockquote > img
    margin 1em
    width 33%

  .rotator .pip
    font-size 12pt

.rotator > div
  overflow hidden
  max-width 100%
