mixin social(link)
  li.social: a(href=link.href, target="_blank", rel="noopener")
    span(class="icon-" + link.type, title=link.type + " logo") #[= link.desc]

doctype html
html
  head

    != lang("en")
    != viewport(true)
    != webapp("#002610")
    != screenshot("http://www.highlandas.com/images/logo" + jpgExt)
    != twitter("@HighlandAdvSol")
    != css(fileRoot + "css/style" + cssExt)
    block head
      script(src=fileRoot + "header" + jsExt, async, defer)
      script(src="https://js.stripe.com/v3/")
  body
    header
      a#mainLogoWrapper(href="/"): img#mainLogo(src=fileRoot + "images/logo" + svgExt, alt="logo", title="Highland AS logo")
