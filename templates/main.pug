          li: a(href="/#about") about
          li: a(href="/#customers") clients
          // li: a(href="/#news") news
          li: a(href="/downloads.html") resources
          +social({
            type: "twitter",
            href: "https://twitter.com/HighlandAdvSol"
          })
          +social({
            type: "linkedin",
            href: "https://www.linkedin.com/company/highland-as-llc/about/"
          })
          +social({
            type: "facebook",
            href: "https://www.facebook.com/HighlandAS/?eid=ARAUEyvRshz77nWVzQFfYUz-Y7BJBZXyBP1CPatlBtRj_UAdCR3MbFr_xmPcTGlDtLpW8ny0OP1-dEns"
          })
          li: a.secondary.button(href="https://calendly.com/melody-mcbeth", target="_blank", rel="noopener", title="Schedule a meeting")
